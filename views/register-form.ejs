<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Page</title>
    <link rel="stylesheet" href="/styles/form.css" />
  </head>
  <body>
    <form action="/register" method="POST">
      <h1>Register</h1>

      <% if (locals.errors && locals.errors.length > 0) { %>
      <ul>
        <% locals.errors.forEach(error => { %>
        <li class="error"><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>

      <div>
        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="first_name" required value="<%= locals.data?.first_name || '' %>" />
      </div>

      <div>
        <label for="last_name">Last Name:</label>
        <input type="text" id="last_name" name="last_name" required value="<%= locals.data?.last_name || '' %>" />
      </div>

      <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required value="<%= locals.data?.email || '' %>" />
      </div>

      <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />
      </div>

      <button type="submit">Register</button>
    </form>
  </body>
</html>
